{
  "compilerOptions": {
    "esModuleInterop": true,
    "noImplicitAny": true,
    "module": "CommonJS",
    "target": "es2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./src",

    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"],
  "ts-node": {
    "esm": true // from the top of https://typestrong.org/ts-node/docs/imports/
  }
}
